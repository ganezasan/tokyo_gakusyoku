<Alloy>
	<Window>
		<View>
		<TableView id="table">
            <TableViewSection id="tableSection">
    			<HeaderView>
					<View id="headSection" height="30">
			    		<Label id="headerLabel">(1000文字まで)</Label>
			    		<Label id="headCountLabel">0</Label>
			    		<Label id="headCountLabelPoint">文字</Label>
					</View>
				</HeaderView>
                <TableViewRow>
			        <TextArea id="textArea" 
							borderWidth="0"
					        borderColor='#bbb'
					        borderRadius="2"
			        		color="#336699"
			        		top="10" 
			        		width="100%" 
			        		height="160"
			        		keyboardType="Titanium.UI.KEYBOARD_DEFAULT"
			      			returnKeyType="Titanium.UI.RETURNKEY_DEFAULT"/>
                </TableViewRow>
            </TableViewSection>
        </TableView>
 	</View>
    </Window>
</Alloy>